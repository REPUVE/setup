# ~/.rcrc
# Modelled after .bash_profile

prompt = ('; ' '  ')

fn prompt {
	# Red status, if non-zero.
	s=$status { ~ $s 0 || { tput setaf 1; echo -n $s' ' } }
	# Blue user@host.
	tput setaf 4; echo -n `{id -F}^@`{uname -n}
	# Green path.
	tput setaf 2; echo ' '`{pwd}
	# Reset colors.
	tput sgr0
}

# Colored ls that shows hidden files.
fn ls { builtin ls -aG $* }

# Editor variables and alias.
EDITOR = 'subl'
VISUAL = 'subl -w'
fn e { $EDITOR $* }

# path manipulations: set it, add rust
path = ( `{ cat /etc/paths } $home/.multirust/toolchains/nightly/cargo/bin )

# For secrets and whatnot.
. $home/.rcrcsecret
